int solControlPin=9; // Must be a PWM pin- 3,5,6,9,10,11

// define a time delay (ms)to stay in state
int inPin=48; // 2.3 V from MC connected to digital pin 7


void setup() {
 // Setup the control pin as output, start Low
 pinMode(solControlPin,OUTPUT);
 digitalWrite(solControlPin,LOW);
 pinMode(inPin,INPUT); // set digital pin 28 as input

}









































































































































































































































































































void loop() {
 if(inPin>0){
  // Set the output pin as high
  analogWrite(solControlPin,255); // duty cycle 50 %
 }
 else {
  analogWrite(solControlPin,0);
 }
}
